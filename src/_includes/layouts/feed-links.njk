<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ metadata.title }}</title>
    <subtitle>{{ metadata.subtitle }}</subtitle>
    <link href="{{ metadata.feedUrl }}" rel="self"/>
    <link href="{{ metadata.url }}"/>
    <updated>{{ collection | rssLastUpdatedDate }}</updated>
    <id>{{ metadata.feed.id }}</id>
    <author>
        <name>{{ metadata.author.name }}</name>
        <email>{{ metadata.author.email }}</email>
    </author>
    {%- for post in collection | reverse %}
    {%- set absolutePostUrl -%}{{ post.url | url | absoluteUrl(metadata.url) }}{%- endset -%}
    {%- set commentLink -%}
    <p><a href="mailto:boss+rss@treylabs.com?subject=Reply%20to:%20“{{ post.data.title }}.”">Reply via email</a></p>
    {%- endset -%}
    {%- set permalink -%}
    <hr /><p><a title="Permanent link to “{{ post.data.title }}”" href="{{ absolutePostUrl }}">This page on treypiepmeier.com.</a></p>
    {%- endset -%}
    <entry>
        <title>{{ post.data.title }}</title>
        <link href="{{ post.data.href }}"/>
        <updated>{{ post.date | rssDate }}</updated>
        <id>{{ absolutePostUrl }}</id>
        <content type="html">
            {{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}
            {{ permalink }}
            {{ commentLink }}
        </content>
    </entry>
    {%- endfor %}
</feed>
