<ul class="postlist">
{% for post in postslist | reverse %}
    <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
        <div><a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a></div>
        <div>
            {% for tag in post.data.tags %}
                {%- if tag != "words" and tag != "solutions" -%}
                    {% set tagUrl %}/{{ section }}/tag/{{ tag }}/{% endset %}
                    <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
                {%- endif -%}
            {% endfor %}
        </div>
        <div title="{{ post.date | fullDate }}">{{ post.date | shortDate }}</div>
    </li>
{% endfor %}
</ul>
