<ul class="postlist">
{% for post in postslist | reverse %}
    <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
        <span title="{{ post.date | fullDate }}">{{ post.date | shortDate }}</span>
        <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.fullTitle or post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
        {% for tag in post.data.tags %}
            {%- if tag != "words" and tag != "solutions" -%}
                {% if section == "words" %}
                {% set tagUrl %}/words/tag/{{ tag }}/{% endset %}
                {% else %}
                {% set tagUrl %}/solutions/tag/{{ tag }}/{% endset %}
                {% endif %}
                <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
            {%- endif -%}
        {% endfor %}
    </li>
{% endfor %}
</ol>
